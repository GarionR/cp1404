BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: text_input
            on_text: app.handle_calculate(text_input.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(text_input.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(text_input.text, -1)

#    Button:
#        text: 'Convert m to km'
#        on_press: app.handle_calculate(text_input.text)
    Label:
        text: app.output_message